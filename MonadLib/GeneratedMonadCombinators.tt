        public static Func<TA, IMonad<<#= typeListPrefix #>TC>> Compose<TA, TB, TC>(Func<TA, IMonad<<#= typeListPrefix #>TB>> f, Func<TB, IMonad<<#= typeListPrefix #>TC>> g)
